@model TiendaRopa.Models.Producto

@{
    ViewData["Title"] = "Registro de libros";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<section id="catalogue" class="catalogue section-bg" style="text-align: center;">
<div class="section-title">
          <h2 >Registro de Libros</h2>
          <p>Registra los libros completando el siguiente formulario</p>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">

   <form asp-controller="Producto" asp-action="Enviar">
       <div class="form-group formM">
            <label asp-for="nombre" class="colorForm"></label>
                <input asp-for="nombre" class="form-control"/>
                <span asp-validation-for="nombre" class="text-danger"></span>
        </div class="form-group">

              <div class="form-group formM">
                <label asp-for="autor" class="colorForm" ></label>
                <input asp-for="autor" class="form-control"/>
                <span asp-validation-for="autor" class="text-danger"></span>

            </div>
            
               <div class="form-group formM">
                <label asp-for="idioma" class="colorForm"></label>
                <input asp-for="idioma" class="form-control"/>
                <span asp-validation-for="idioma" class="text-danger"></span>

            </div>
          <div class="form-group formM">
                <label asp-for="isbn" class="colorForm" ></label>
                <input asp-for="isbn" class="form-control"/>
                <span asp-validation-for="isbn" class="text-danger"></span>

            </div>

              <div class="form-group formM">
                <label asp-for="editorial" class="colorForm"></label>
                <input asp-for="editorial" class="form-control"/>
                <span asp-validation-for="editorial" class="text-danger"></span>

            </div>

               <div class="form-group formM">
                <label asp-for="pagina" class="colorForm"></label>
                <input asp-for="pagina" class="form-control"/>
                <span asp-validation-for="pagina" class="text-danger"></span>

            </div>

               <div class="form-group formM">
                <label asp-for="precio" class="colorForm"></label>
                <input asp-for="precio" class="form-control"/>
                <span asp-validation-for="precio" class="text-danger"></span>

            </div>
            
            <div class="form-group formM">
                <label asp-for="descripcion" class="colorForm"></label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
            </div> 

            <div class="form-group formM">
                <label asp-for="imagen" class="colorForm"></label>
                <input asp-for="imagen" class="form-control"></input>
                <span type="text" asp-validation-for="imagen" class="text-danger"></span>
            </div> 

              <div class="form-group text-center" >
              <button type="submit" class="btn btn-success">Registrar</button>
              <button asp-action="Listar" class="btn btn-danger"> Cancelar</button>
              </div>
              
   </form>

</div>
</div>
</div>
</section>
